<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <style>
        nav{
            color:black;
        }
        .logo{
            width:30px;
            margin-right:4px;
        }
        .logo2{
            width:100px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-light">
        <div class="container">
            <img src="~/image/small-logo.png" class="logo" />
            
            @Html.ActionLink("Edaman's Food Analyze", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
          
           
        <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                @if (Session["username"] != null)
                {
                    <li>@Html.ActionLink("Sign Out", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                }
                else
                {
                    <li>@Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Sign Up", "Register", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                }



            </ul>
            <img src="~/image/logo.png" class="logo2" />
        </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.DayOfYear - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
