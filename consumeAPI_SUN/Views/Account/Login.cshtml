@model consumeAPI_SUN.Models.SignUpTB

@{
    ViewBag.Title = "Login";
}
<style>
    body {
        background-image:url("/image/360_F_460710131_YkD6NsivdyYsHupNvO3Y8MPEwxTAhORh.jpg");
    }
    .row {
        display: flex;
        justify-content: center;
        
    }
    table{
        width:450px;
    }
    .outdiv {
        padding: 9px;
        margin-top: 100px;
        width: 470px;
        height: 230px;
        color:azure;
        
    }
</style>

<div class="row">
    <div class="col-md-3 col-md-offset-5">
        <div class="outdiv"  padding:10px;">
            @using (Html.BeginForm("Login","Account",FormMethod.Post))
            {
                <table height="200">
                    <tr>
                        <th colspan="2" class="text-center" style="font-size:25px;">Login Form</th>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.username)</td>
                        <td>@Html.TextBoxFor(model => model.username, new { @class = "form-control" })</td>
                        
                    </tr>
                    <tr><<td>@Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })</td></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.password)</td>
                        <td>@Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })</td>


                    </tr>
                    <tr><<td>@Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })</td></tr>
                    <tr>
                        <td style="color:red">  @ViewBag.ErrorMessage</td>
                        <td>
                            <input type="submit" value="Login" name="login" class="btn btn-success" />
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
